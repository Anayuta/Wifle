<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="修改SSID和密码"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/standar_orange"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:src="@color/standar_orange" />

    <EditText
        android:id="@+id/wifi_SSID"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_margin="4dp"
        android:hint="@string/wifi_ssid" />

    <EditText
        android:id="@+id/wifi_password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_margin="4dp"
        android:hint="@string/wifi_password" />

    <ImageView
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:src="@color/standar_orange" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/setting_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/setting_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ok"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:layout_margin="8dp" />

    </LinearLayout>
</LinearLayout>